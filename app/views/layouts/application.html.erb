<!DOCTYPE html>
<html>
  <head>
    <title>Taskpit</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header class="page-header">
    <nav class="nav">
        <h1 class="ml-2"><%= link_to 'Taskpit', tasks_path, class: 'nav-link' %></h1></<h1>
        <% if params[:controller] == 'admin/users' %>
          <h2 class="nav-link ml-2 mt-2">管理画面</h2>
        <% end %>

      <% if logged_in? %>
        <ul class="navbar ml-auto mt-2">
          <li class="nav-item mr-3 h5"><%= current_user.name %></li>

          <% if current_user.admin? %>
            <% if params[:controller] == 'admin/users' %>
              <li class="nav-item"><%= link_to 'タスク一覧', tasks_path, class: 'nav-link text-white h5' %></li>
            <% else%>
              <li class="nav-item"><%= link_to '管理画面', admin_users_path, class: 'nav-link text-white h5' %></li>
            <% end %>
          <% end %>

          <% if params[:controller] == 'admin/users' %>
            <li class="nav-item"><%= link_to 'マイページ', admin_user_path(current_user), class: 'nav-link text-white h5' %></li>
          <% else %>
            <li class="nav-item"><%= link_to 'マイページ', user_path(current_user), class: 'nav-link text-white h5' %></li>
          <% end %>
          <li class="nav-item"><%= link_to 'ログアウト', session_path(current_user),
                    method: :delete, class: 'nav-link text-white h5' %></li>
        </ul>
      <% end %>
    </nav><!-- /.navbar -->
  </header>

  <body>
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key} notice") %>
    <% end %>

    <%= yield %>
  </body>
</html>
