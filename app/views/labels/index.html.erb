<div class="container">
  <h1 class="page-title">ラベル一覧</h1>

  <div class="mb-4">
    <%= link_to '新規作成', new_label_path, class: 'btn btn-primary mx-2' %>
    <%= link_to 'タスク一覧', tasks_path, class: 'btn btn-outline-primary mx-2' %>
  </div>

  <div class="container">
    <table class="table table-hover table-striped">
      <thead class="thead-default">
        <tr class="text-center">
          <th><%= Label.human_attribute_name(:name) %></th>
          <th><%= Label.human_attribute_name(:created_at) %></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @labels.each do |label| %>
          <tr>
            <td class="task_row text-center align-middle"><%= label.name %></td>
            <td class="text-center align-middle"><%= label.created_at.strftime('%Y年%m月%d日 %H:%M') %></td>
            <td><%= link_to '編集', edit_label_path(label), class: 'btn btn-success' %></td>
            <td><%= link_to '削除', label_path(label), method: :delete, data: { confirm: '削除してよろしいですか？' }, class: "lael-#{label.id} btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div><!-- /.container -->
</div><!-- /.container -->

<footer class="page-footer">
  <%= link_to 'DIVE INTO CODE', 'https://diveintocode.jp/', class: 'footer-link' %>
</footer>

