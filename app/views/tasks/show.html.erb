<div class="container">
  <h1 class="page-title">タスクの詳細</h1>
  <%= link_to '一覧', tasks_path %>

  <div class="task-details">
    <table class="task-details-list">
      <tr>
        <th>ID</th>
        <td><%= @task.id %></td>
      </tr>
      <tr>
        <th>名称</th>
        <td><%= @task.name %></td>
      </tr>
      <tr>
        <th>詳しい説明</th>
        <td><%= @task.description %></td>
      </tr>
      <tr>
        <th>登録日時</th>
        <td><%= @task.created_at %></td>
      </tr>
      <tr>
        <th>変更日時</th>
        <td><%= @task.updated_at %></td>
      </tr>
    </table>
  </div><!-- /.task-details" -->
  <%= link_to '編集', edit_task_path(@task) %><br>
  <%= link_to '新規作成', new_task_path %>
</div><!-- /.container -->