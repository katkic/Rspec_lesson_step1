<div class="col-5 mx-auto">
  <h1 class="page-title">タスクの詳細</h1>
  <ul>
    <li><%= link_to '削除', new_task_path, method: :delete, data: { confirm: '本当に削除してもよろしいですか？' }, class: 'btn btn-secondary mb-3' %></li>
    <li><%= link_to '一覧', tasks_path, class: 'btn btn-outline-primary' %></li>
  </ul>


  <div class="task-details">
    <table class="table table-hover">
      <tr>
        <th><%= Task.human_attribute_name(:id) %></th>
        <td><%= @task.id %></td>
      </tr>
      <tr>
        <th><%= Task.human_attribute_name(:name) %></th>
        <td><%= @task.name %></td>
      </tr>
      <tr>
        <th><%= Task.human_attribute_name(:description) %></th>
        <td><%= simple_format(h(@task.description), {}, sanitize: false, wrapper_tag: 'div') %></td>
      </tr>
      <tr>
        <th><%= Task.human_attribute_name(:priority) %></th>
        <td id="priority"><%= @task.priority_i18n %></td>
      </tr>
      <tr>
        <th><%= Task.human_attribute_name(:status) %></th>
        <td id="status"><%= @task.status_i18n %></td>
      </tr>
      <tr>
        <th><%= Task.human_attribute_name(:expired_at) %></th>
        <td class="text-danger"><%= @task.expired_at.strftime('%Y年%m月%d日 %H:%M') %></td>
      </tr>
      <tr>
        <th><%= Task.human_attribute_name(:created_at) %></th>
        <td><%= @task.created_at.strftime('%Y年%m月%d日 %H:%M') %></td>
      </tr>
      <tr>
        <th><%= Task.human_attribute_name(:updated_at) %></th>
        <td><%= @task.updated_at.strftime('%Y年%m月%d日 %H:%M') %></td>
      </tr>
    </table>
  </div><!-- /.task-details" -->
  <%= link_to '編集', edit_task_path(@task), class: 'btn btn-outline-primary' %><br>
</div><!-- /.container -->
